[Unit]
Description=Jenkins Agent (Ansible)
Wants=network.target
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
Environment="JENKINS_HOME={{ jenkins_home }}"
Environment="AGENT_NAME=ansible-agent"
WorkingDirectory={{ jenkins_home }}
ReadWritePaths={{ jenkins_home }}
ExecStart=/bin/bash {{ jenkins_home }}/service.sh
Restart=always
RestartSec=10
StartLimitInterval=0

[Install]
WantedBy=multi-user.target